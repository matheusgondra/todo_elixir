{
  "info": {
    "version": "1.0",
    "title": "TODO API"
  },
  "host": "localhost:4000",
  "definitions": {
    "Task": {
      "description": "A task in the application",
      "example": {
        "created_at": "2021-08-01T12:00:00Z",
        "id": "0bf45eb1-e00c-41d6-8fa3-0bcf85802823",
        "title": "Buy groceries",
        "updated_at": "2021-08-01T12:00:00Z"
      },
      "properties": {
        "created_at": {
          "description": "The date and time the task was created",
          "type": "string"
        },
        "id": {
          "description": "Unique identifier for the task",
          "type": "string"
        },
        "title": {
          "description": "The task's title",
          "type": "string"
        },
        "updated_at": {
          "description": "The date and time the task was last updated",
          "type": "string"
        }
      },
      "title": "Task",
      "type": "object"
    },
    "Error": {
      "description": "An error response from the API",
      "example": {
        "message": "Invalid credentials"
      },
      "properties": {
        "message": {
          "description": "A message describing the error",
          "type": "string"
        }
      },
      "title": "ErrorResponse",
      "type": "object"
    },
    "User": {
      "description": "A user of the application",
      "example": {
        "created_at": "2021-08-01T12:00:00Z",
        "email": "johndoe@mail.com",
        "id": "0bf45eb1-e00c-41d6-8fa3-0bcf85802823",
        "name": "John Doe",
        "updated_at": "2021-08-01T12:00:00Z"
      },
      "properties": {
        "created_at": {
          "description": "The date and time the user was created",
          "type": "string"
        },
        "email": {
          "description": "The user's email address",
          "type": "string"
        },
        "id": {
          "description": "Unique identifier for the user",
          "type": "string"
        },
        "name": {
          "description": "The user's name",
          "type": "string"
        },
        "updated_at": {
          "description": "The date and time the user was last updated",
          "type": "string"
        }
      },
      "title": "User",
      "type": "object"
    },
    "SignInParams": {
      "description": "Sign in parameters",
      "example": {
        "email": "johndoe@mail.com",
        "password": "password"
      },
      "properties": {
        "email": {
          "description": "User email",
          "format": "email",
          "type": "string"
        },
        "password": {
          "description": "User password",
          "type": "string"
        }
      },
      "required": [
        "password",
        "email"
      ],
      "title": "SignInParams",
      "type": "object"
    },
    "SignIn": {
      "description": "Sign in a user",
      "example": {
        "access_token": "token"
      },
      "properties": {
        "access_token": {
          "description": "Access token",
          "type": "string"
        }
      },
      "title": "SignIn",
      "type": "object"
    },
    "UserParams": {
      "description": "Parameters for creating a user",
      "example": {
        "email": "johndoe@mail.com",
        "name": "John Doe",
        "password": "password"
      },
      "properties": {
        "email": {
          "description": "User email address",
          "type": "string"
        },
        "name": {
          "description": "User name",
          "type": "string"
        },
        "password": {
          "description": "User password",
          "type": "string"
        }
      },
      "required": [
        "password",
        "email",
        "name"
      ],
      "title": "UserParams",
      "type": "object"
    },
    "TaskParams": {
      "description": "Parameters for creating a task",
      "properties": {
        "title": {
          "description": "Task title",
          "type": "string"
        }
      },
      "required": [
        "title"
      ],
      "title": "TaskParams",
      "type": "object"
    },
    "TaskList": {
      "description": "A list of tasks",
      "example": {
        "data": [
          {
            "created_at": "2021-08-01T12:00:00Z",
            "id": "0bf45eb1-e00c-41d6-8fa3-0bcf85802823",
            "title": "Buy groceries",
            "updated_at": "2021-08-01T12:00:00Z"
          },
          {
            "created_at": "2021-08-01T12:00:00Z",
            "id": "0bf45eb1-e00c-41d6-8fa3-0bcf85802823",
            "title": "Buy groceries",
            "updated_at": "2021-08-01T12:00:00Z"
          }
        ],
        "limit": 10,
        "page": 1
      },
      "properties": {
        "tasks": {
          "description": "List of tasks",
          "items": {
            "$ref": "#/definitions/Task"
          },
          "type": "array"
        }
      },
      "title": "TaskList",
      "type": "object"
    }
  },
  "paths": {
    "/signin": {
      "post": {
        "description": "Sign in a user",
        "operationId": "TodoWeb.Auth.SignInController.handle",
        "parameters": [
          {
            "description": "User credentials",
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SignInParams"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User signed in",
            "schema": {
              "$ref": "#/definitions/SignIn"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        },
        "summary": "Sign in a user",
        "tags": [
          "Auth"
        ]
      }
    },
    "/signup": {
      "post": {
        "description": "Sign up a new user",
        "operationId": "TodoWeb.Auth.SignUpController.handle",
        "parameters": [
          {
            "description": "User parameters",
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserParams"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        },
        "summary": "Sign up a new user",
        "tags": [
          "Auth"
        ]
      }
    },
    "/tasks": {
      "get": {
        "description": "List tasks",
        "operationId": "TodoWeb.Task.ListTaskController.handle",
        "parameters": [
          {
            "default": 1,
            "description": "Page number",
            "in": "query",
            "name": "page",
            "required": false,
            "type": "integer"
          },
          {
            "default": 10,
            "description": "Number of tasks per page",
            "in": "query",
            "name": "limit",
            "required": false,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "List of tasks",
            "schema": {
              "$ref": "#/definitions/TaskList"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "List tasks",
        "tags": [
          "Tasks"
        ]
      },
      "post": {
        "description": "Create a task",
        "operationId": "TodoWeb.Task.AddTaskController.handle",
        "parameters": [
          {
            "description": "Task details",
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TaskParams"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Task created",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "401": {
            "description": "Unauthorized",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Create a task",
        "tags": [
          "Tasks"
        ]
      }
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "basePath": "/api",
  "securityDefinitions": {
    "Bearer": {
      "in": "header",
      "name": "Authorization",
      "type": "apiKey",
      "description": "JWT Token"
    }
  },
  "swagger": "2.0"
}